---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import PageFindSearch from "../components/PageFind/PageFindSearch.astro";
import BlogList from "../components/PageFind/List.astro";
const allVideos = await getCollection("tramas");
---

<Layout title="Buscar videos">
  <div class="relative z-20 max-w-2xl pt-20 mx-auto lg:py-32">
    <h1 class="px-6 mb-4 font-sans text-4xl md:text-6xl font-light text-left">
      Buscar
    </h1>
    <h2 class="px-6 mb-2 font-sans text-lg md:text-xl font-light text-left">
      Escriba en el buscador y aguarde a que aparezcan los resultados.
    </h2>
    <PageFindSearch />
    <BlogList posts={allVideos} />
  </div>
</Layout>
