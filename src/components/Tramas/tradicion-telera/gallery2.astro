---
import { GALERIA2 } from "./constants.ts";
import { Image } from "@astrojs/image/components";
---

<div class="grid md:grid-cols-3 gap-0.5">
  {
    GALERIA2.map((i) => {
      return (
        <div class={`h-auto overflow-hidden w-full`}>
          <Image alt={i.title} src={i.image} width={1600} height={1280} class="object-cover w-full h-64" format="webp" />
        </div>
      );
    })
  }
</div>
