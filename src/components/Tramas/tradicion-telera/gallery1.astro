---
import { GALERIA1 } from "./constants.ts";
import ImageLightbox from "@/components/ImageLightbox/ImageLightbox.astro";
---

<div class="grid md:grid-cols-3 gap-0.5">
  {
    GALERIA1.map((i) => {
      return (
        <div class={`h-auto overflow-hidden w-full ${i.class}`}>
          <ImageLightbox alt={i.title} src={i.image} />
        </div>
      );
    })
  }
</div>
