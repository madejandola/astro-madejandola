---
import { Image } from "@astrojs/image/components";
interface Props {
  images: Array<string>;
}
const { images } = Astro.props;
---

<div class="max-w-2xl mx-auto" id="myCarousel1">
  {
    images.map((i) => {
      return (
        <div
          class="slide"
        >
          <Image
            alt={i}
            src={i}
            width={1600}
            height={1280}
            class="object-cover w-full h-96"
            format="webp"
          />
        </div>
      );
    })
  }
</div>
